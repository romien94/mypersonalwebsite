.tags {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.tags__item {
  padding: 14px 19px;
  background-color: #ebeff3;
  border-radius: 22.5px;
  margin-right: 10px;
  @include desktop {
    margin-right: 6%;
  }
  @include phones {
    font-size: 13px;
    padding: 1vh 8%;
    margin-right: 0;
  }
}

.tags__item:last-child {
  margin-right: 0;
}
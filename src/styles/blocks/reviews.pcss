.reviews__container {
  padding: 140px 0 30px 0;
  @include tablets {
    padding-top: 14vh;
  }
  @include phones {
    padding-top: 15vh;
  }
}

.reviews__top {
  display: flex;
  margin-bottom: 97px;
  @include tablets {
    margin-bottom: 6vh;
  }
  @include phones {
    flex-direction: column;
    margin-bottom: 4vh;
  }
}

.section-title--white {
  color: white;
}

.reviews__top .section-title {
  margin-right: 13%;
  @include tablets {
    margin-right: 8%;
  }
  @include phones {
    margin-right: 0;
    margin-bottom: 4vh;
  }
}

.reviews__buttons {
  display: flex;
  @include phones {
    align-self: center;
  }
}

.reviews__buttons .direction-button {
  margin-right: 30px;
}

.direction-button:last-child {
  margin-right: 0;
}

.reviews__content {
  width: 57%;
  margin-left: 9%;
  @include desktop {
    width: 74%;
    margin-left: 11%;
  }
  @include tablets {
    width: 100%;
    margin: 0;
    display: flex;
    justify-content: center;
    padding-left: 8%;
  }
}

.reviews__commentary {
  font-weight: 600;
  line-height: 1.88;
  color: rgba(255, 255, 255, 0.5);
  @include tablets {
    font-size: 14px;
    line-height: 1.71;
  }
  @include phones {
    margin-bottom: 2vh;
  }
}

.reviews__list {
  display: flex;
  justify-content: space-between;
  @include phones {
    overflow: hidden;
  }
}

.reviews__item {
  height: 210px;
  justify-content: space-between;
  width: 41%;
  display: flex;
  flex-direction: column;
  @include tablets{
    width: 48%;
  }
  @include phones {
    width: 100%;
    flex-shrink: 0;
    justify-content: flex-start;
  }
}

.reviews__user {
  display: flex;
  align-items: center;
  font-size: 18px;
  @include tablets {
    font-size: 16px;
  }
  @include phones {
    font-size: 14px;
  }
}

.reviews-user__avatar {
  margin-right: 30px;
  @include tablets {
    margin-right: 3%;
  }
}

.reviews-user__avatar .avatar {
  width: 75px;
  height: 75px;
  border-radius: 50%;
  @include phones {
    width: 50px;
    height: 50px;
  }
}

.reviews-user__name {
  font-weight: bold;
  color: white;
  margin-bottom: 10px;
}

.reviews-user__occupation {
  font-weight: 600;
}
.footer {
  background-color: #0a001d;
    @include tablets {
    font-size: 14px;
  }
}

.footer__container {
  display: flex;
  padding: 100px 0;
  justify-content: space-between;
  @include desktop {
    width: 90%;
    padding-top: 10vh;
  }
  @include tablets {
    padding-top: 2vh;
  }
  @include phones {
    flex-direction: column;
    padding-top: 3vh;
    padding-left: 5%;
    padding-right: 5%;
  }
}

.footer__left {
  display: flex;
  width: 25%;
  justify-content: space-between;
  @include desktop {
    flex-direction: column;
    justify-content: flex-start;
  }
  @include phones {
    width: 100%;
    margin-bottom: 8vh;
  }
}

.footer__developer {
  display: flex;
  flex-direction: column;
}

.footer__right {
  width: 63%;
  @include desktop {
    width: 74%;
  }
  @include tablets {
    width: 65%;
    padding-top: 1vh;
  }
  @include phones {
    width: 100%;
    padding: 0;
  }
}

.footer__copyright {
  font-size: 48px;
  font-weight: 600;
  @include desktop {
    margin-bottom: 1vh;
  }
}


.footer__developer-name {
  color: white;
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 6vh;
  text-transform: uppercase;
  @include phones {
    margin-bottom: 1vh;
  }
}

.footer__menu .nav {
  color: white;
  margin-bottom: 34px;
}

.footer__info {
  display: flex;
  justify-content: space-between;
  @include tablets {
    flex-direction: column;
  }
}

.footer__links {
  width: 38%;
  @include tablets {
    width: 100%;
    margin-bottom: 7vh;
  }
}

.footer__links-desc {
  margin-bottom: 24px;
}

.footer__quote {
  width: 50%;
  @include tablets {
    width: 100%;
  }
}

.footer__quote-text {
  margin-bottom: 30px;
}

.footer__quote-author {
  color: white;
  font-style: italic;
}


.footer {
  .socials__link{
  display: flex;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  padding: 15px;
  justify-content: center;
  align-items: center;

    &:hover {
      border: 1px solid rgba(255, 255, 255, 1);
      transition: all .7s;
    }
  }
}

.footer .socials__icon {
  width: 20px;
  height: 20px;
}

.footer {
  .nav__list {
    margin-top: -40px;
    margin-left: -32px;
  }
}

.footer .socials__list {
  @include tablets {
    justify-content: flex-start;
  }
}